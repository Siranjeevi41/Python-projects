{
  "swagger": "2.0",
  "info": {
    "description": "API for integrating with ChatGPT and BridgeIT",
    "version": "1.0.0",
    "title": "Integration API"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/submit_query": {
      "post": {
        "summary": "Submit query to either ChatGPT or BridgeIT",
        "description": "Submits the user query to the selected API and retrieves the response.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Query object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Query"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Response"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Query": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string"
        },
        "service": {
          "type": "string",
          "enum": ["chatgpt", "bridgeit"]
        }
      }
    },
    "Response": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string"
        }
      }
    }
  }
}
